<div class="banner">
  <img src="{{model.bannerUrl}}"/>
  <h1>{{model.name}}</h1>
</div>

<div class="container-fluid">
  <div class="row">
    {{#each model.albums as |album|}}
      <div class="col-md-3">
        <a class="album-tile">
          <img src="{{album.artworkUrl}}"/>
          <h4>{{album.name}}</h4>
        </a>
      </div>
    {{/each}}
  </div>

  {{outlet}}
</div>
