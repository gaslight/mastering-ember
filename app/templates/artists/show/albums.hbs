<div class="container-fluid">
  <div class="text-right">
    {{#link-to "artists.show.newAlbum" class="btn btn-default"}}Add New{{/link-to}}
  </div>

  {{#each model as |album|}}
    <div class="row album-row">
      <div class="col-md-3">
        <img src="{{album.artworkUrl}}"/>
      </div>

      <div class="col-md-9">
        <h4>{{album.name}}</h4>

        <table class="table">
          <tbody>
            {{#each album.tracks as |track|}}
              {{me-track-row track=track}}
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{/each}}
</div>
